<?xml version="1.0" encoding="utf-8"?>
<com.dtalk.dd.ui.widget.circle.VideoCircleRenderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/default_bk"

    >

    <com.dtalk.dd.ui.widget.IMBaseImageView
        android:id="@+id/user_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tt_default_user_portrait_corner" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/user_portrait"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="小明"
            android:textColor="#7f93bd"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="没有钱啊"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/iv_video_thumb"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="false"
                android:scaleType="centerCrop" />

            <com.dtalk.dd.ui.widget.MGProgressbar
                android:id="@+id/tt_image_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/message_state_paly"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/play_big" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="3分钟前"
                android:textColor="@color/gray"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/date"
                android:text="删除"
                android:textColor="#7f93bd"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/btn_more"
                android:layout_width="23dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/micro_comment"
                android:padding="5dp" />
        </RelativeLayout>

        <com.dtalk.dd.ui.widget.praisewidget.widget.PraiseWidget xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/praise_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:layout_marginRight="10dp"
            android:background="#eeeeef"
            android:lineSpacingExtra="2px"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="5"
            app:font_color="#ff576b95"
            app:font_size="14dp" />

        <com.dtalk.dd.ui.widget.Lu_PingLunLayout
            android:id="@+id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#eeeeef"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/content_layout"
        android:layout_marginTop="10dp"
        android:background="#E8E8E8" />
</com.dtalk.dd.ui.widget.circle.VideoCircleRenderView>